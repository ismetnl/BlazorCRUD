<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">AirportCrudMap</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
            <NavLink class="nav-link" href="CRUD" Match="NavLinkMatch.All">
                <span class="oi oi-briefcase" aria-hidden="true"></span> CRUD
            </NavLink>
            <NavLink class="nav-link" href="customcontrols" Match="NavLinkMatch.All">
                <span class="oi oi-map-marker" aria-hidden="true"></span> Location Search
            </NavLink>
        </li>
    </ul>
</div>

@code {
    bool collapseNavMenu = true;

    string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
